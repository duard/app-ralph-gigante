# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Sankhya API Configuration
VITE_SANKHYA_API_URL=http://localhost:3000
VITE_SANKHYA_AUTH_URL=http://localhost:3000/auth
VITE_SANKHYA_WS_URL=ws://localhost:3000/ws

# Authentication
VITE_AUTH_PERSIST=true
VITE_AUTH_STORAGE_KEY=auth-token
VITE_REFRESH_TOKEN_KEY=refresh-token

# Application Configuration
VITE_APP_NAME=Sankhya Products Dashboard
VITE_APP_URL=http://localhost:5173
VITE_APP_ENV=development

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Upload Configuration
VITE_MAX_UPLOAD_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Cache Configuration
VITE_CACHE_TTL=300000
VITE_ENABLE_CACHE=true
